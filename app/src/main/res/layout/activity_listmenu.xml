<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:id="@+id/card"
    tools:context=".ListMenu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="7.0"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_ayo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JENIS - JENIS "
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tx_senam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SENAM "
                android:textColor="@color/red"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tx_lantai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LANTAI"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <TextView
            android:id="@+id/tvBs"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klik Untuk Melihat Jenis Senam lantai"
            android:textSize="12sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        tools:ignore="UseCompoundDrawables">

                        <Button
                            android:id="@+id/btn1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Guling Depan atau Forward Roll
                                          (Roll depan)"
                            android:textSize="12sp"
                            android:onClick="Pindah"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/tvBs" />

                        <Button
                            android:id="@+id/btn2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Guling Belakang atau Backward Roll
                                          (Roll belakang)"
                            android:textSize="12sp"
                            android:onClick="Pindah1"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn1" />

                        <Button
                            android:id="@+id/btn3"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Lompat Kangkang"
                            android:textSize="12sp"
                            android:onClick="Pindah2"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn2" />

                        <Button
                            android:id="@+id/btn4"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Guling Lenting"
                            android:textSize="12sp"
                            android:onClick="Pindah3"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn3" />

                        <Button
                            android:id="@+id/btn5"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Lompat Jongkok"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:onClick="Pindah4"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn4" />

                        <Button
                            android:id="@+id/btn6"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Lompat Harimau"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:onClick="Pindah5"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn5" />

                        <Button
                            android:id="@+id/btn7"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Handstand"
                            android:textSize="12sp"
                            android:onClick="Pindah6"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn6" />

                        <Button
                            android:id="@+id/btn8"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Head Stand"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:onClick="Pindah7"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn7" />

                        <Button
                            android:id="@+id/btn9"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Sikap Lilin"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:onClick="Pindah8"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn8" />

                        <Button
                            android:id="@+id/btn10"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Round Off"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:onClick="Pindah9"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn9" />

                        <Button
                            android:id="@+id/btn11"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Kayang"
                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:onClick="Pindah10"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn10" />

                        <Button
                            android:id="@+id/btn12"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Meroda"
                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:onClick="Pindah11"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn11" />

                        <Button
                            android:id="@+id/btn13"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:text="Gerakan Salto"
                            android:layout_gravity="left"
                            android:textSize="12sp"
                            android:onClick="Pindah12"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:background="#3087d7"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/btn12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>